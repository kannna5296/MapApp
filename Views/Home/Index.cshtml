@model List<MapApp.Models.Coworkingspace>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-8">
        <p>The World from my view</p>
        <div id="map" style="height:600px; width:600px;"></div>
    </div>
    <div class="col-md-4">
        <div class="field">
            <p class="description">地名を入力し、"View Map"を押してください</p>
            <input id="address" type="text" />
            <button id="getMap" class="btn">Get Map</button>
            <button id="getCW" class="btn wide">直近コワーキングスペース表示</button>
            <a asp-area="" asp-controller="Home" asp-action="GetCW">Privacy</a>
        </div>
        <div class="field">
            <p class="description">始点と終点を入力し、"Get Route"を押してください</p>
            <input id="start" type="text" placeholder="始点" />
            <input id="end" type="text" placeholder="終点" />
            <div>
                <b>Mode of Travel: </b>
                <select id="travelmode">
                    <option value="DRIVING">Driving</option>
                    <option value="WALKING">Walking</option>
                    <option value="BICYCLING">Bicycling</option>
                    <option value="TRANSIT">Transit</option>
                </select>
            </div>
            <button id="getRoute" class="btn" value="Get Route">Get Route</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <p>CW詳細A</p>
    </div>
    <div class="col-md-4">
        <p>CW詳細B</p>
    </div>
    <div class="col-md-4">
        <p>CW詳細C</p>
    </div>
</div>

@if (Model != null)
{
    @foreach (var coworkingspace in Model.Select((Value, Index) => new { Value, Index }))
    {
        <input id=@string.Format("cwlat{0}", coworkingspace.Index ) value=@coworkingspace.Value.Lat type="hidden">
        <input id=@string.Format("cwlon{0}", coworkingspace.Index ) value=@coworkingspace.Value.Lon type="hidden">
    }
}